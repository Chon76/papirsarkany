generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Status {
  Pending
  Canceled
  Fullfilled
}

enum Category {
  Egyzsinoros  @map("Egyzsinóros")
  PalcakRudak  @map("Pálcák és rudak")
  Csovek       @map("Csövek")
  Zsinorok     @map("Zsinórok")
  Zsinortartok @map("Zsinórtartók")
}

enum ShippingMode {
  PersonalPickup @map("Személyes átvétel")
  Post           @map("Postai szállítás")
}

enum PaymentMode {
  Cash     @map("Átvételkor készpénzel")
  Transfer @map("Előreutalással")
}

model Customers {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  firstName          String
  lastName           String
  phone              String
  shippingPostcode   String
  shippingCity       String
  shippingAddress    String
  shippingSubaddress String
  billingPostcode    String
  billingCity        String
  billingAddress     String
  billingSubaddress  String
  createdAt          DateTime @default(now()) @db.Timestamp(6)
  Orders             Orders[]
}

model Orders {
  id           Int          @id @default(autoincrement())
  customerId   Int
  status       Status
  shippingMode ShippingMode
  paymentMode  PaymentMode
  comment      String?
  createdAt    DateTime     @default(now()) @db.Timestamp(6)
  Customers    Customers    @relation(fields: [customerId], references: [id])
  OrderItems   OrderItems[]

  @@index([customerId])
}

model OrderItems {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId String
  quantity  Int

  orders    Orders?   @relation(fields: [orderId], references: [id])
  products  Products? @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Products {

 id         String       @id @default(uuid())
  name       String
  slug       String       @unique
  imageUrl   String?
  price      Int
  category   Category
  properties Json?
  OrderItems OrderItems[]
}
